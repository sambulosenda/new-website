---
const navLinks = [
  { path: '/#work', label: 'work' },
  { path: '/writing', label: 'blog' }
];
---

<nav id="main-nav" class="fixed w-full py-4 px-6 z-50 transition-all duration-300">
  <div class="max-w-6xl mx-auto">
    <div class="flex justify-between items-center px-4 py-3 bg-editor-surface/80 backdrop-blur-xl border border-editor-border rounded-lg">
      <!-- Logo -->
      <a href="/" class="group flex items-center gap-3">
        <div class="flex items-center gap-2 font-mono text-sm">
          <span class="text-syntax-purple">const</span>
          <span class="text-syntax-blue">dev</span>
          <span class="text-gray-400">=</span>
          <span class="text-syntax-orange">"sambulo"</span>
        </div>
      </a>

      <!-- Desktop Nav -->
      <div class="hidden md:flex items-center gap-1">
        {navLinks.map(({ path, label }) => (
          <a
            href={path}
            class={`px-4 py-2 font-mono text-sm transition-all duration-200 rounded ${
              Astro.url.pathname === path || (path === '/#work' && Astro.url.pathname === '/')
                ? 'text-syntax-blue bg-syntax-blue/10'
                : 'text-gray-400 hover:text-gray-100 hover:bg-editor-hover'
            }`}
          >
            .{label}()
          </a>
        ))}

        <div class="w-px h-5 bg-editor-border mx-2"></div>

        <a
          href="https://cal.com/sambulosenda"
          target="_blank"
          class="flex items-center gap-2 px-4 py-2 bg-syntax-blue/10 hover:bg-syntax-blue/20 text-syntax-blue font-mono text-sm rounded border border-syntax-blue/30 transition-all duration-200"
        >
          <span class="w-2 h-2 bg-syntax-green rounded-full animate-pulse"></span>
          hire()
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button id="mobile-menu-button" class="md:hidden w-10 h-10 flex items-center justify-center rounded text-gray-400 hover:text-gray-100 hover:bg-editor-hover transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="fixed inset-0 bg-editor-bg/95 backdrop-blur-xl z-50 hidden">
    <div class="flex flex-col h-full">
      <div class="flex justify-between items-center p-6">
        <div class="font-mono text-sm">
          <span class="text-syntax-purple">const</span>
          <span class="text-syntax-blue ml-2">dev</span>
          <span class="text-gray-400 ml-1">=</span>
          <span class="text-syntax-orange ml-1">"sambulo"</span>
        </div>
        <button id="mobile-menu-close" class="w-10 h-10 flex items-center justify-center rounded text-gray-400 hover:text-gray-100 hover:bg-editor-hover transition-colors">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>

      <nav class="flex flex-col items-center justify-center flex-1 gap-4">
        {navLinks.map(({ path, label }) => (
          <a
            href={path}
            class={`px-6 py-3 font-mono text-lg transition-colors rounded ${
              Astro.url.pathname === path
                ? 'text-syntax-blue bg-syntax-blue/10'
                : 'text-gray-400 hover:text-gray-100'
            }`}
          >
            .{label}()
          </a>
        ))}

        <a
          href="https://cal.com/sambulosenda"
          target="_blank"
          class="mt-4 flex items-center gap-2 px-6 py-3 bg-syntax-blue/10 text-syntax-blue font-mono text-lg rounded border border-syntax-blue/30"
        >
          <span class="w-2 h-2 bg-syntax-green rounded-full animate-pulse"></span>
          hire()
        </a>
      </nav>
    </div>
  </div>
</nav>

<script>
  const nav = document.getElementById('main-nav');

  function handleScroll() {
    const currentScroll = window.scrollY;
    if (currentScroll > 50) {
      nav?.querySelector('div > div')?.classList.add('shadow-lg', 'shadow-black/20');
    } else {
      nav?.querySelector('div > div')?.classList.remove('shadow-lg', 'shadow-black/20');
    }
  }

  window.addEventListener('scroll', handleScroll, { passive: true });

  // Mobile menu
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenuClose = document.getElementById('mobile-menu-close');
  const mobileMenu = document.getElementById('mobile-menu');

  function toggleMobileMenu(show: boolean) {
    if (show) {
      mobileMenu?.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    } else {
      mobileMenu?.classList.add('hidden');
      document.body.style.overflow = '';
    }
  }

  mobileMenuButton?.addEventListener('click', () => toggleMobileMenu(true));
  mobileMenuClose?.addEventListener('click', () => toggleMobileMenu(false));
</script>
