---
import Layout from '../layouts/Layout.astro';

const skills = [
  "React Native", "TypeScript", "GraphQL", "Redux", "React Navigation",
  "Performance Optimization", "CI/CD", "API Integration", "Testing"
];

const experiences = [
  {
    title: "React Native Developer",
    company: "On Wellbeing",
    period: "Jan 2023 - Present",
    description: "Led mobile development, collaborated with design team, and ensured app stability through rigorous testing.",
    technologies: ["React Native", "GraphQL", "MobX"]
  },
  {
    title: "Developer",
    company: "Whitbread",
    period: "Sep 2019 - Jan 2023",
    description: "Developed and maintained business-critical web applications serving 10,000+ daily users.",
    technologies: ["JavaScript", "React", "Node.js"]
  }
];

const socialLinks = [
  { platform: 'GitHub', url: 'https://github.com/sambulosenda' },
  { platform: 'LinkedIn', url: 'https://linkedin.com/in/sambulosenda' },
  { platform: 'Twitter', url: 'https://twitter.com/sambulosenda' },
];
---

<Layout title="About — Sambulo Senda">
  <main class="bg-white dark:bg-zinc-950 pt-32 pb-20">
    <div class="max-w-3xl mx-auto px-6">

      <!-- Header -->
      <header class="mb-16">
        <h1 class="text-3xl font-medium text-zinc-900 dark:text-white tracking-tight mb-6">About</h1>
        <p class="text-lg text-zinc-500 leading-relaxed">
          I'm a React Native developer with 5+ years of experience building mobile and web applications.
          My focus is on creating intuitive, performant, and user-centric solutions.
        </p>
      </header>

      <!-- Skills -->
      <section class="mb-16">
        <h2 class="text-lg font-medium text-zinc-900 dark:text-white mb-6">Skills</h2>
        <div class="flex flex-wrap gap-2">
          {skills.map(skill => (
            <span class="px-3 py-1.5 bg-zinc-50 dark:bg-zinc-900 border border-zinc-100 dark:border-zinc-800 rounded-lg text-sm text-zinc-600 dark:text-zinc-400">
              {skill}
            </span>
          ))}
        </div>
      </section>

      <!-- Experience -->
      <section class="mb-16">
        <h2 class="text-lg font-medium text-zinc-900 dark:text-white mb-6">Experience</h2>
        <div class="space-y-8">
          {experiences.map(({ title, company, period, description, technologies }) => (
            <div class="border-l-2 border-zinc-200 dark:border-zinc-800 pl-6">
              <h3 class="font-medium text-zinc-900 dark:text-white">{title}</h3>
              <p class="text-zinc-500 text-sm mb-2">{company} · {period}</p>
              <p class="text-zinc-600 dark:text-zinc-400 text-sm mb-3">{description}</p>
              <div class="flex flex-wrap gap-2">
                {technologies.map(tech => (
                  <span class="text-xs px-2 py-1 bg-zinc-100 dark:bg-zinc-800 text-zinc-500 rounded">
                    {tech}
                  </span>
                ))}
              </div>
            </div>
          ))}
        </div>
      </section>

      <!-- Contact -->
      <section>
        <h2 class="text-lg font-medium text-zinc-900 dark:text-white mb-6">Connect</h2>
        <div class="flex gap-6">
          {socialLinks.map(({ platform, url }) => (
            <a
              href={url}
              target="_blank"
              class="text-sm text-zinc-500 hover:text-zinc-900 dark:hover:text-white transition-colors"
            >
              {platform}
            </a>
          ))}
        </div>
      </section>

    </div>
  </main>
</Layout>
