---
import Layout from '../layouts/Layout.astro';

const projects = [
  {
    title: 'Wellbeing App',
    description: 'Build a healthier, happier team',
    image: '/projects/ecommerce.jpg',
    tags: ['React Native', 'Mobx', 'GraphQL'],
    link: '#'
  },


];
---

<Layout title="Projects | John Doe">
  <div class="min-h-screen max-w-6xl mx-auto px-4 py-32">
    <h1 class="text-3xl font-bold mb-12">Projects</h1>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map(project => (
        <article class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition">
          {/* <div class="aspect-video w-full bg-gray-100 dark:bg-gray-700">
            {project.image && (
              <img 
                src={project.image} 
                alt={project.title}
                class="w-full h-full object-cover"
              />
            )} */}
          </div>
          <div class="p-6">
            <h3 class="text-xl font-semibold mb-2">{project.title}</h3>
            <p class="text-gray-600 dark:text-gray-300 mb-4">{project.description}</p>
            <div class="flex flex-wrap gap-2 mb-4">
              {project.tags.map(tag => (
                <span class="text-sm px-3 py-1 bg-gray-100 dark:bg-gray-700 rounded-full">
                  {tag}
                </span>
              ))}
            </div>
            <a 
              href={project.link}
              class="inline-flex items-center text-sm font-medium text-black dark:text-white hover:underline"
            >
              View Project
              <svg class="w-4 h-4 ml-1" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </a>
          </div>
        </article>
      ))}
    </div>
  </div>
</Layout>