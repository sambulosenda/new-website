---
import Layout from '../layouts/Layout.astro';

const socialLinks = [
  {
    platform: 'GitHub',
    url: 'https://github.com/sambulosenda',
    label: 'GitHub Profile'
  },
  {
    platform: 'LinkedIn',
    url: 'https://linkedin.com/in/sambulosenda',
    label: 'LinkedIn Profile'
  },
  {
    platform: 'Twitter',
    url: 'https://twitter.com/sambulosenda',
    label: 'Twitter Profile'
  }
];
---

<Layout title="Sam | React Native Developer">
  <main class="min-h-screen flex items-center justify-center px-4 py-16">
    <div class="max-w-2xl mx-auto text-center">
      <div class="mb-8 flex justify-center">
        <div class="relative group">
          <div class="w-48 h-48 rounded-full overflow-hidden border-4 border-gray-100 dark:border-gray-800 shadow-lg transition-transform duration-300 group-hover:scale-105">
            <img 
              src="/profile.jpg" 
              alt="Sam's profile photo"
              class="w-full h-full object-cover"
              width="192"
              height="192"
              loading="eager"
              decoding="async"
            />
          </div>
          <div class="absolute inset-0 rounded-full bg-black/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        </div>
      </div>

      <h1 class="text-gradient">
        Hi, I'm Sam!
      </h1>

      <p class="text-xl mb-6 text-gray-600 dark:text-gray-300">
        React Native Developer from London ðŸ‡¬ðŸ‡§
      </p>

      <div class="space-y-4 text-lg text-gray-600 dark:text-gray-300">
        <p>
          With 5+ years of experience in mobile development, I specialize in creating
          intuitive and performant cross-platform applications.
        </p>
        <p>
          I'm passionate about creating beautiful mobile experiences and sharing knowledge
          through open-source projects and technical writing.
        </p>
      </div>
      
      <div class="mt-8 flex justify-center gap-4">
        {socialLinks.map(({ platform, url, label }) => (
          <a
            href={url}
            target="_blank"
            rel="noopener noreferrer"
            class="px-4 py-2 text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-100 transition-colors"
            aria-label={label}
          >
            {platform}
          </a>
        ))}
      </div>

      <div class="mt-12 flex flex-col sm:flex-row justify-center gap-4">
        <a 
          href="/projects" 
          class="px-6 py-3 bg-black dark:bg-white text-white dark:text-black rounded-lg hover:opacity-90 transition-opacity flex items-center justify-center gap-2"
        >
          View Projects
        </a>
        <a 
          href="/writing" 
          class="px-6 py-3 border border-gray-200 dark:border-gray-700 rounded-lg hover:border-gray-300 dark:hover:border-gray-600 transition-colors flex items-center justify-center gap-2"
        >
          Read Blog
        </a>
      </div>
    </div>
  </main>
</Layout>

<style>
  h1 {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    line-height: 1.1;
    margin-bottom: 1rem;
  }

  .text-gradient {
    background-image: linear-gradient(45deg, rgb(124, 58, 237), rgb(219, 39, 119));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
    100% { transform: translateY(0px); }
  }

  .floating {
    animation: float 3s ease-in-out infinite;
  }
</style>