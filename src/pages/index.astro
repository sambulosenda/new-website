---
import Layout from '../layouts/Layout.astro';
import { projects, socialLinks } from '../data/projects';

const apps = projects;
---

<Layout title="Sambulo Senda — Software Engineer">
  <main class="bg-editor-bg">

    <!-- Hero -->
    <section class="pt-40 pb-20">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl md:text-5xl font-semibold text-gray-100">
          Sambulo Senda
        </h1>
        <p class="text-lg text-gray-500 mt-3 mb-8">Software Engineer</p>

        <p class="text-xl text-gray-400 leading-relaxed max-w-2xl mb-10">
          I build software that solves real problems—owning things end-to-end from serverless architecture to final UX. Core skills: TypeScript, React, React Native, Node. Also into mentoring, product direction, and AI/LLM engineering.
        </p>

        <div class="flex items-center gap-5 text-sm">
          {socialLinks.map(({ url, platform }) => (
            <a
              href={url}
              target="_blank"
              class="text-gray-500 hover:text-gray-300 transition-colors"
            >
              {platform}
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Work -->
    <section id="work" class="py-20">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-semibold text-gray-100 mb-8">
          Projects
        </h2>

        <!-- Projects List -->
        <div class="space-y-6">
          {apps.map((app) => {
            const Wrapper = app.url ? 'a' : 'div';
            return (
              <Wrapper
                href={app.url}
                target={app.url ? '_blank' : undefined}
                class={`block p-5 rounded-lg border border-editor-border hover:border-gray-600 transition-colors ${app.url ? 'cursor-pointer' : ''}`}
              >
                <h3 class="text-lg font-medium text-gray-100 mb-2">{app.title}</h3>
                <p class="text-gray-400 text-sm">{app.description}</p>
              </Wrapper>
            );
          })}
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="py-16 border-t border-editor-border">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-gray-500">
        <span>© {new Date().getFullYear()} sambulo.dev</span>
        <a href="mailto:sambulosenda@gmail.com" class="hover:text-gray-300 transition-colors">
          sambulosenda@gmail.com
        </a>
      </div>
    </footer>

  </main>
</Layout>
