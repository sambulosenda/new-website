---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import { socialLinks } from '../data/projects';
---

<Layout title="Sambulo Senda â€” Mobile Engineer">
  <main class="min-h-screen flex flex-col">

    <section class="pt-36 pb-24 sm:pt-44 sm:pb-32 flex-1">
      <div class="max-w-2xl mx-auto px-4 sm:px-6">

        <img
          src="/profile.jpg"
          alt="Sambulo Senda"
          class="w-20 h-20 rounded-full object-cover ring-2 ring-border mb-8"
        />

        <h1 class="text-3xl sm:text-4xl font-bold text-ink tracking-tight">
          Sambulo Senda
        </h1>

        <p class="text-lg text-ink-muted mt-4 leading-relaxed">
          Mobile engineer shipping React Native apps to the App Store.
          Building indie products, helping teams, and open to consulting.
        </p>

        <div class="flex items-center gap-3 mt-8">
          {socialLinks.map(({ url, platform, icon }) => (
            <a
              href={url}
              target="_blank"
              rel="noopener noreferrer"
              class="p-2 text-ink-faint hover:text-ink transition-colors"
              aria-label={platform}
            >
              <span set:html={icon} />
            </a>
          ))}
        </div>

      </div>
    </section>

    <Footer />

  </main>
</Layout>
