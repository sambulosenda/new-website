            </svg>
            E-Mail Me
          </a>
        </div>
      </div>
    </section>
    
    <!-- Footer -->
    <footer class="py-8 border-t border-gray-200 dark:border-gray-800">
      <div class="max-w-6xl mx-auto px-6 md:px-4 text-center">
        <p class="text-sm text-gray-500 dark:text-gray-400">
          © {new Date().getFullYear()} Sambulo Senda. All rights reserved.
        </p>
      </div>
    </footer>
