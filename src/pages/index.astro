---
import Layout from '../layouts/Layout.astro';
import { projects, socialLinks, technologies } from '../data/projects';

const apps = projects;
---

<Layout title="Sambulo Senda — React Native Developer">
  <main class="bg-white dark:bg-zinc-950">

    <!-- Hero -->
    <section class="min-h-[85vh] flex items-center pt-20 pb-16 lg:pt-0 lg:pb-0">
      <div class="max-w-6xl mx-auto px-6 w-full">
        <div class="grid lg:grid-cols-5 gap-12 lg:gap-16 items-center">

          <!-- Content - takes more space -->
          <div class="lg:col-span-3 space-y-6">
            <!-- Eyebrow -->
            <p class="text-sm tracking-widest text-zinc-400 uppercase animate-fade-in">
              React Native Developer
            </p>

            <!-- Main headline - larger, more impactful -->
            <h1 class="text-5xl md:text-6xl lg:text-7xl font-medium text-zinc-900 dark:text-white leading-[1.1] tracking-tight animate-fade-in-up delay-1">
              I build apps<br/>
              <span class="text-zinc-300 dark:text-zinc-600">people love.</span>
            </h1>

            <!-- Subheadline -->
            <p class="text-xl text-zinc-500 leading-relaxed max-w-lg animate-fade-in-up delay-2">
              Helping teams create beautiful, high-performance mobile experiences with React Native.
            </p>

            <!-- CTAs -->
            <div class="flex flex-wrap gap-4 animate-fade-in-up delay-4">
              <a
                href="https://cal.com/sambulosenda"
                target="_blank"
                class="px-6 py-3 bg-zinc-900 dark:bg-white text-white dark:text-zinc-900 rounded-full text-sm font-medium hover:bg-zinc-700 dark:hover:bg-zinc-200 transition-all hover:scale-105"
              >
                Book a call
              </a>
              <a
                href="#work"
                class="px-6 py-3 border border-zinc-200 dark:border-zinc-800 text-zinc-600 dark:text-zinc-400 rounded-full text-sm font-medium hover:bg-zinc-50 dark:hover:bg-zinc-900 transition-all"
              >
                View work
              </a>
            </div>
            <p class="text-xs text-zinc-400 animate-fade-in-up delay-4">
              Free 30-min consultation · No commitment
            </p>

            <!-- Social -->
            <div class="flex items-center gap-5 pt-2 animate-fade-in-up delay-5">
              {socialLinks.map(({ url, platform, icon }) => (
                <a
                  href={url}
                  target="_blank"
                  class="text-zinc-300 hover:text-zinc-900 dark:text-zinc-600 dark:hover:text-white transition-colors"
                  aria-label={platform}
                >
                  <Fragment set:html={icon} />
                </a>
              ))}
            </div>

            <!-- Trust indicator -->
            <div class="flex items-center gap-2 pt-4 text-sm text-zinc-400 animate-fade-in-up delay-6">
              <span>6+ years experience</span>
            </div>
          </div>

          <!-- Profile Image - smaller, balanced -->
          <div class="lg:col-span-2 animate-fade-in-up delay-3">
            <div class="relative">
              <!-- Status badge -->
              <div class="absolute -top-3 -right-3 z-10 flex items-center gap-2 px-3 py-1.5 bg-white dark:bg-zinc-900 border border-zinc-100 dark:border-zinc-800 rounded-full shadow-lg animate-fade-in delay-6">
                <span class="w-2 h-2 bg-amber-500 rounded-full animate-pulse"></span>
                <span class="text-xs font-medium text-zinc-600 dark:text-zinc-400">Available</span>
              </div>

              <div class="aspect-[3/4] rounded-3xl overflow-hidden bg-zinc-100 dark:bg-zinc-900 ring-1 ring-zinc-100 dark:ring-zinc-800">
                <img
                  src="/profile.jpg"
                  alt="Sambulo Senda"
                  class="w-full h-full object-cover"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Tech -->
    <section class="py-16 border-y border-zinc-100 dark:border-zinc-900">
      <div class="max-w-6xl mx-auto px-6">
        <div class="flex flex-wrap justify-center gap-3">
          {technologies.map((tech) => (
            <span class={`px-4 py-2 rounded-full text-sm transition-all hover:scale-105 ${
              tech.primary
                ? 'bg-zinc-900 dark:bg-white text-white dark:text-zinc-900 font-medium'
                : 'bg-zinc-50 dark:bg-zinc-900 border border-zinc-100 dark:border-zinc-800 text-zinc-500'
            }`}>
              {tech.name}
            </span>
          ))}
        </div>
      </div>
    </section>

    <!-- Work -->
    <section id="work" class="py-24 lg:py-32">
      <div class="max-w-6xl mx-auto px-6">
        <!-- Section header -->
        <div class="max-w-2xl mb-16">
          <p class="text-sm tracking-widest text-zinc-400 uppercase mb-4">Portfolio</p>
          <h2 class="text-4xl lg:text-5xl font-medium text-zinc-900 dark:text-white tracking-tight mb-4">
            Selected Work
          </h2>
          <p class="text-lg text-zinc-500">
            Apps designed and developed from concept to App Store launch.
          </p>
        </div>

        <!-- Portfolio Grid: Featured + 3 -->
        <div class="space-y-5">
          <!-- Featured project (full-width) -->
          <article class="group animate-on-scroll" style="--delay: 0ms">
            <div class="relative aspect-[21/9] rounded-2xl overflow-hidden bg-zinc-100 dark:bg-zinc-900 ring-1 ring-zinc-100 dark:ring-zinc-800">
              <img
                src={apps[0].screenshot}
                alt={apps[0].title}
                class="w-full h-full object-cover object-top transition-transform duration-700 group-hover:scale-105"
                loading="lazy"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-zinc-900/90 via-zinc-900/40 to-transparent"></div>
              <div class="absolute bottom-0 left-0 right-0 p-8">
                <div class="flex gap-2 text-xs text-zinc-300 mb-2">
                  {apps[0].tags.map((tag, i) => (
                    <span>{tag}{i < apps[0].tags.length - 1 ? ' ·' : ''}</span>
                  ))}
                </div>
                <h3 class="text-3xl font-medium text-white mb-2">{apps[0].title}</h3>
                <p class="text-zinc-300 text-sm max-w-xl">{apps[0].description}</p>
              </div>
            </div>
          </article>

          <!-- 3-column grid for remaining projects -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-5">
            <!-- Card 2 -->
            <article class="group animate-on-scroll" style="--delay: 100ms">
              <div class="relative aspect-[4/5] rounded-2xl overflow-hidden bg-zinc-100 dark:bg-zinc-900 ring-1 ring-zinc-100 dark:ring-zinc-800">
                <img
                  src={apps[1].screenshot}
                  alt={apps[1].title}
                  class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                  loading="lazy"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-zinc-900/80 via-zinc-900/20 to-transparent"></div>
                <div class="absolute bottom-0 left-0 right-0 p-5">
                  <div class="flex gap-2 text-xs text-zinc-300 mb-2">
                    {apps[1].tags.slice(0, 2).map((tag, i) => (
                      <span>{tag}{i < 1 ? ' ·' : ''}</span>
                    ))}
                  </div>
                  <h3 class="text-xl font-medium text-white mb-1">{apps[1].title}</h3>
                  <p class="text-zinc-300 text-sm line-clamp-2">{apps[1].description}</p>
                </div>
              </div>
            </article>

            <!-- Card 3 -->
            <article class="group animate-on-scroll" style="--delay: 200ms">
              <div class="relative aspect-[4/5] rounded-2xl overflow-hidden bg-zinc-100 dark:bg-zinc-900 ring-1 ring-zinc-100 dark:ring-zinc-800">
                <img
                  src={apps[2].screenshot}
                  alt={apps[2].title}
                  class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                  loading="lazy"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-zinc-900/80 via-zinc-900/20 to-transparent"></div>
                <div class="absolute bottom-0 left-0 right-0 p-5">
                  <div class="flex gap-2 text-xs text-zinc-300 mb-2">
                    {apps[2].tags.slice(0, 2).map((tag, i) => (
                      <span>{tag}{i < 1 ? ' ·' : ''}</span>
                    ))}
                  </div>
                  <h3 class="text-xl font-medium text-white mb-1">{apps[2].title}</h3>
                  <p class="text-zinc-300 text-sm line-clamp-2">{apps[2].description}</p>
                </div>
              </div>
            </article>

            <!-- Card 4 -->
            <article class="group animate-on-scroll" style="--delay: 300ms">
              <div class="relative aspect-[4/5] rounded-2xl overflow-hidden bg-zinc-100 dark:bg-zinc-900 ring-1 ring-zinc-100 dark:ring-zinc-800">
                <img
                  src={apps[3].screenshot}
                  alt={apps[3].title}
                  class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                  loading="lazy"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-zinc-900/80 via-zinc-900/20 to-transparent"></div>
                <div class="absolute bottom-0 left-0 right-0 p-5">
                  <div class="flex gap-2 text-xs text-zinc-300 mb-2">
                    {apps[3].tags.slice(0, 2).map((tag, i) => (
                      <span>{tag}{i < 1 ? ' ·' : ''}</span>
                    ))}
                  </div>
                  <h3 class="text-xl font-medium text-white mb-1">{apps[3].title}</h3>
                  <p class="text-zinc-300 text-sm line-clamp-2">{apps[3].description}</p>
                </div>
              </div>
            </article>
          </div>
        </div>
      </div>
    </section>

    <!-- Mid-page CTA -->
    <section class="py-16 bg-zinc-50 dark:bg-zinc-900/50">
      <div class="max-w-2xl mx-auto px-6 text-center">
        <h3 class="text-xl font-medium text-zinc-900 dark:text-white mb-4">
          Have a React Native project in mind?
        </h3>
        <p class="text-zinc-500 dark:text-zinc-400 mb-6">
          I help teams ship quality mobile apps faster.
        </p>
        <a
          href="https://cal.com/sambulosenda"
          target="_blank"
          class="inline-flex px-6 py-3 bg-zinc-900 dark:bg-white text-white dark:text-zinc-900 rounded-full text-sm font-medium hover:bg-zinc-700 dark:hover:bg-zinc-200 transition-all hover:scale-105"
        >
          Schedule a free consultation
        </a>
      </div>
    </section>

    <!-- CTA -->
    <section class="py-24 lg:py-32 bg-zinc-950">
      <div class="max-w-3xl mx-auto px-6 text-center">
        <p class="text-sm text-amber-400 mb-4">Available for new projects</p>
        <h2 class="text-4xl lg:text-5xl font-medium text-white tracking-tight mb-6">
          Let's build your next app
        </h2>

        <ul class="flex flex-wrap justify-center gap-x-6 gap-y-2 text-sm text-zinc-400 mb-10">
          <li class="flex items-center gap-2">
            <svg class="w-4 h-4 text-amber-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            React Native expertise
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-4 h-4 text-amber-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            Full-cycle development
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-4 h-4 text-amber-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            Performance focused
          </li>
        </ul>

        <div class="flex flex-wrap gap-4 justify-center">
          <a
            href="https://cal.com/sambulosenda"
            target="_blank"
            class="px-8 py-4 bg-white text-zinc-900 rounded-full font-medium hover:bg-zinc-100 transition-all hover:scale-105"
          >
            Book a call
          </a>
          <a
            href="mailto:sambulosenda@gmail.com"
            class="px-8 py-4 border border-zinc-700 text-zinc-300 rounded-full font-medium hover:bg-zinc-800 transition-all"
          >
            sambulosenda@gmail.com
          </a>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="py-10 border-t border-zinc-100 dark:border-zinc-900">
      <div class="max-w-6xl mx-auto px-6">
        <div class="flex flex-col md:flex-row justify-between items-center gap-6 text-sm text-zinc-400">
          <span>© {new Date().getFullYear()} Sambulo Senda</span>
          <div class="flex gap-8">
            {socialLinks.map(({ url, platform }) => (
              <a href={url} target="_blank" class="hover:text-zinc-900 dark:hover:text-white transition-colors">
                {platform}
              </a>
            ))}
          </div>
        </div>
      </div>
    </footer>

    <!-- Floating CTA -->
    <a
      id="floating-cta"
      href="https://cal.com/sambulosenda"
      target="_blank"
      class="fixed bottom-6 right-6 px-5 py-3 bg-zinc-900 dark:bg-white text-white dark:text-zinc-900 rounded-full text-sm font-medium shadow-lg opacity-0 translate-y-4 transition-all duration-300 pointer-events-none hover:scale-105 z-40"
    >
      Get in touch
    </a>
  </main>
</Layout>

<style>
  /* Animations */
  @keyframes fade-in {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 0.6s ease-out forwards;
  }

  .animate-fade-in-up {
    animation: fade-in-up 0.6s ease-out forwards;
  }

  .delay-1 { animation-delay: 100ms; opacity: 0; }
  .delay-2 { animation-delay: 200ms; opacity: 0; }
  .delay-3 { animation-delay: 300ms; opacity: 0; }
  .delay-4 { animation-delay: 400ms; opacity: 0; }
  .delay-5 { animation-delay: 500ms; opacity: 0; }
  .delay-6 { animation-delay: 600ms; opacity: 0; }

  /* Scroll animations */
  .animate-on-scroll {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
    transition-delay: var(--delay, 0ms);
  }

  .animate-on-scroll.visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<script>
  // Intersection Observer for scroll animations
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
        }
      });
    },
    { threshold: 0.1, rootMargin: '0px 0px -50px 0px' }
  );

  document.querySelectorAll('.animate-on-scroll').forEach((el) => {
    observer.observe(el);
  });

  // Smooth scroll
  document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href'));
      if (target) {
        target.scrollIntoView({ behavior: 'smooth' });
      }
    });
  });

  // Floating CTA visibility
  const floatingCta = document.getElementById('floating-cta');
  window.addEventListener('scroll', () => {
    if (window.scrollY > window.innerHeight * 0.8) {
      floatingCta?.classList.remove('opacity-0', 'translate-y-4', 'pointer-events-none');
    } else {
      floatingCta?.classList.add('opacity-0', 'translate-y-4', 'pointer-events-none');
    }
  }, { passive: true });
</script>
