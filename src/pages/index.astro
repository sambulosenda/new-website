---
import Layout from '../layouts/Layout.astro';

const socialLinks = [
  {
    platform: 'GitHub',
    url: 'https://github.com/sambulosenda',
    icon: `<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"/></svg>`,
  },
  {
    platform: 'LinkedIn',
    url: 'https://linkedin.com/in/sambulosenda',
    icon: `<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>`,
  },
  {
    platform: 'Twitter',
    url: 'https://twitter.com/sambulosenda',
    icon: `<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>`,
  },
];

const technologies = ['React Native', 'TypeScript', 'Redux', 'GraphQL', 'Node.js', 'CI/CD'];

const apps = [
  {
    title: 'Andersen EV',
    description: 'Migrated EV charging app to React Native New Architecture, improving performance by 30%.',
    tags: ['React Native', 'IoT', 'Performance'],
    screenshot: '/andersen-ev.png',
  },
  {
    title: 'Aspire',
    description: 'Built mental well-being app serving 10,000+ users with 98% crash-free rate.',
    tags: ['React Native', 'MobX', 'GraphQL'],
    screenshot: '/aspire.png',
  },
  {
    title: 'Onwellbeing',
    description: 'React Native mobile apps serving 10,000+ daily users across hospitality brands.',
    tags: ['React Native', 'React', 'Enterprise'],
    screenshot: '/onwellbeing.png',
  },
  {
    title: 'Report Focus News',
    description: 'Offline-first architecture with biometric auth and GDPR compliance.',
    tags: ['Consulting', 'AWS', 'Security'],
    screenshot: '/report-focus-news.png',
  },
];
---

<Layout title="Sambulo Senda — React Native Developer">
  <main class="bg-white dark:bg-zinc-950">

    <!-- Hero -->
    <section class="pt-32 pb-20 lg:pt-44 lg:pb-28">
      <div class="max-w-5xl mx-auto px-6">
        <div class="grid lg:grid-cols-2 gap-16 lg:gap-20 items-center">

          <div class="space-y-8">
            <p class="text-sm tracking-widest text-zinc-400 uppercase">React Native Developer</p>

            <h1 class="text-4xl lg:text-5xl font-medium text-zinc-900 dark:text-white leading-tight tracking-tight">
              I build apps<br/>
              <span class="text-zinc-400">people love to use.</span>
            </h1>

            <p class="text-lg text-zinc-500 dark:text-zinc-400 leading-relaxed">
              I'm Sambulo — I help teams build beautiful, high-performance mobile experiences. Featured on the App Store.
            </p>

            <div class="flex items-center gap-6 text-sm text-zinc-500">
              <span class="flex items-center gap-2">
                <span class="w-2 h-2 bg-emerald-500 rounded-full"></span>
                Available
              </span>
              <span class="flex items-center gap-2">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/></svg>
                Featured
              </span>
            </div>

            <div class="flex gap-3 pt-2">
              <a
                href="https://cal.com/sambulosenda"
                target="_blank"
                class="px-5 py-2.5 bg-zinc-900 dark:bg-white text-white dark:text-zinc-900 rounded-lg text-sm font-medium hover:bg-zinc-800 dark:hover:bg-zinc-100 transition-colors"
              >
                Book a call
              </a>
              <a
                href="#work"
                class="px-5 py-2.5 border border-zinc-200 dark:border-zinc-800 text-zinc-600 dark:text-zinc-400 rounded-lg text-sm font-medium hover:bg-zinc-50 dark:hover:bg-zinc-900 transition-colors"
              >
                View work
              </a>
            </div>

            <div class="flex gap-4 pt-4">
              {socialLinks.map(({ url, platform, icon }) => (
                <a
                  href={url}
                  target="_blank"
                  class="text-zinc-400 hover:text-zinc-900 dark:hover:text-white transition-colors"
                  aria-label={platform}
                >
                  <Fragment set:html={icon} />
                </a>
              ))}
            </div>
          </div>

          <div class="aspect-[4/5] rounded-2xl overflow-hidden bg-zinc-100 dark:bg-zinc-900">
            <img
              src="/profile.jpg"
              alt="Sambulo Senda"
              class="w-full h-full object-cover"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Tech -->
    <section class="py-12 border-y border-zinc-100 dark:border-zinc-900">
      <div class="max-w-5xl mx-auto px-6">
        <div class="flex flex-wrap justify-center gap-2">
          {technologies.map((tech) => (
            <span class="px-4 py-2 bg-zinc-50 dark:bg-zinc-900 border border-zinc-100 dark:border-zinc-800 rounded-lg text-sm text-zinc-500">
              {tech}
            </span>
          ))}
        </div>
      </div>
    </section>

    <!-- Work -->
    <section id="work" class="py-24 lg:py-32">
      <div class="max-w-5xl mx-auto px-6">
        <div class="mb-16">
          <h2 class="text-3xl font-medium text-zinc-900 dark:text-white tracking-tight">Selected Work</h2>
          <p class="mt-3 text-zinc-500">Apps designed and developed from concept to launch.</p>
        </div>

        <div class="grid md:grid-cols-2 gap-10">
          {apps.map((app) => (
            <article class="group">
              <div class="aspect-[4/3] rounded-xl overflow-hidden bg-zinc-100 dark:bg-zinc-900 mb-4">
                <img
                  src={app.screenshot}
                  alt={app.title}
                  class="w-full h-full object-cover group-hover:scale-[1.02] transition-transform duration-500"
                  loading="lazy"
                />
              </div>
              <div class="flex gap-2 text-xs text-zinc-400 mb-2">
                {app.tags.map((tag, i) => (
                  <span>{tag}{i < app.tags.length - 1 ? ' ·' : ''}</span>
                ))}
              </div>
              <h3 class="text-lg font-medium text-zinc-900 dark:text-white">{app.title}</h3>
              <p class="text-sm text-zinc-500 mt-1">{app.description}</p>
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="py-24 bg-zinc-950 dark:bg-zinc-900">
      <div class="max-w-2xl mx-auto px-6 text-center">
        <h2 class="text-3xl font-medium text-white tracking-tight mb-4">Let's work together</h2>
        <p class="text-zinc-400 mb-8">Building something? I can help.</p>
        <div class="flex gap-3 justify-center">
          <a
            href="https://cal.com/sambulosenda"
            target="_blank"
            class="px-5 py-2.5 bg-white text-zinc-900 rounded-lg text-sm font-medium hover:bg-zinc-100 transition-colors"
          >
            Schedule a call
          </a>
          <a
            href="mailto:sambulosenda@gmail.com"
            class="px-5 py-2.5 border border-zinc-700 text-zinc-300 rounded-lg text-sm font-medium hover:bg-zinc-800 transition-colors"
          >
            Email me
          </a>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="py-8 border-t border-zinc-100 dark:border-zinc-900">
      <div class="max-w-5xl mx-auto px-6 flex justify-between items-center text-sm text-zinc-400">
        <span>© {new Date().getFullYear()} Sambulo Senda</span>
        <div class="flex gap-6">
          {socialLinks.map(({ url, platform }) => (
            <a href={url} target="_blank" class="hover:text-zinc-900 dark:hover:text-white transition-colors">{platform}</a>
          ))}
        </div>
      </div>
    </footer>
  </main>
</Layout>
