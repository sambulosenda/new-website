---
import Layout from '../../layouts/Layout.astro';
const posts = await Astro.glob('./*.{md,mdx}');
---

<Layout title="Blog | React Native Developer">
  <div class="max-w-4xl mx-auto px-4 py-24">
    <h1 class="text-4xl font-bold mb-8">Blog</h1>
    <div class="grid gap-8">
      {posts.map(post => (
        <article class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 hover:shadow-lg transition">
          <h2 class="text-2xl font-bold mb-2">
            <a href={post.url} class="hover:text-primary">{post.frontmatter.title}</a>
          </h2>
          <p class="text-gray-600 dark:text-gray-300 mb-4">{post.frontmatter.description}</p>
          <div class="flex items-center text-sm text-gray-500 dark:text-gray-400">
            <span>{new Date(post.frontmatter.date).toLocaleDateString()}</span>
            {post.frontmatter.tags && (
              <div class="ml-4 flex gap-2">
                {post.frontmatter.tags.map((tag: string) => (
                  <span class="bg-gray-100 dark:bg-gray-700 px-2 py-1 rounded">{tag}</span>
                ))}
              </div>
            )}
          </div>
        </article>
      ))}
    </div>
  </div>
</Layout>