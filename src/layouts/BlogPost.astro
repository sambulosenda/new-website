---
import Layout from './Layout.astro';

interface Frontmatter {
  title: string;
  date: string;
  tags?: string[];
  description?: string;
  readingTime?: string;
  image?: string;
}

interface Props {
  frontmatter: Frontmatter;
}

const { frontmatter } = Astro.props;

const formattedDate = new Date(frontmatter.date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

const readingTime = frontmatter.readingTime || '5 min read';
const canonicalURL = new URL(Astro.url.pathname, Astro.site || 'https://sambulosenda.com');

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": frontmatter.title,
  "description": frontmatter.description || frontmatter.title,
  "datePublished": frontmatter.date,
  "author": {
    "@type": "Person",
    "name": "Sambulo Senda",
    "url": "https://sambulosenda.com"
  },
  "publisher": {
    "@type": "Person",
    "name": "Sambulo Senda"
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": canonicalURL.toString()
  }
};
---

<Layout
  title={`${frontmatter.title} â€” Sambulo Senda`}
  description={frontmatter.description}
  image={frontmatter.image}
  type="article"
  publishedTime={frontmatter.date}
>
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />

  <!-- Reading progress -->
  <div id="reading-progress" class="fixed top-0 left-0 h-0.5 bg-accent z-50 transition-all duration-150" style="width: 0%"></div>

  <article class="min-h-screen">

    <header class="pt-36 pb-10 sm:pt-44">
      <div class="max-w-3xl mx-auto px-4 sm:px-6">

        <a
          href="/writing"
          class="group inline-flex items-center gap-1.5 text-sm text-ink-muted hover:text-accent transition-colors mb-8"
        >
          <svg class="w-4 h-4 transition-transform group-hover:-translate-x-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
          Back to writing
        </a>

        {frontmatter.tags && (
          <div class="flex flex-wrap gap-1.5 mb-4">
            {frontmatter.tags.map((tag: string) => (
              <span class="text-xs px-2 py-0.5 rounded-md bg-surface-subtle text-ink-faint">
                {tag}
              </span>
            ))}
          </div>
        )}

        <h1 class="text-2xl sm:text-3xl font-bold text-ink tracking-tight mb-4">
          {frontmatter.title}
        </h1>

        {frontmatter.description && (
          <p class="text-lg text-ink-muted mb-6 max-w-2xl">
            {frontmatter.description}
          </p>
        )}

        <div class="flex items-center gap-3 text-sm text-ink-faint">
          <time datetime={frontmatter.date}>{formattedDate}</time>
          <span class="text-border">&middot;</span>
          <span>{readingTime}</span>
        </div>
      </div>
    </header>

    <div class="border-t border-border">
      <div class="max-w-3xl mx-auto px-4 sm:px-6 py-12">
        <div class="prose">
          <slot />
        </div>

        <!-- Article footer -->
        <footer class="mt-16 pt-8 border-t border-border">
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
              <img src="/profile.jpg" alt="Sambulo Senda" class="w-10 h-10 rounded-full object-cover" />
              <div>
                <div class="text-sm font-medium text-ink">Sambulo Senda</div>
                <div class="text-xs text-ink-faint">@sambulosenda</div>
              </div>
            </div>

            <div class="flex gap-1">
              <button
                class="share-twitter p-2 rounded-lg text-ink-faint hover:text-accent hover:bg-surface-subtle transition-colors"
                aria-label="Share on Twitter"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              </button>
              <button
                class="share-linkedin p-2 rounded-lg text-ink-faint hover:text-accent hover:bg-surface-subtle transition-colors"
                aria-label="Share on LinkedIn"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </button>
            </div>
          </div>
        </footer>
      </div>
    </div>
  </article>
</Layout>

<style is:global>
  .prose {
    max-width: 65ch;
    color: #6b6b69;
  }

  .prose h2 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    color: #1a1a19;
  }

  .prose h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    color: #1a1a19;
  }

  .prose p {
    margin: 1.25rem 0;
    line-height: 1.8;
  }

  .prose ul, .prose ol {
    margin: 1.25rem 0;
    padding-left: 1.5rem;
  }

  .prose li {
    margin: 0.5rem 0;
  }

  .prose a {
    color: #2b5ce6;
    text-decoration: none;
  }

  .prose a:hover {
    text-decoration: underline;
  }

  .prose pre {
    background-color: #1a1a19;
    padding: 1.25rem;
    border-radius: 0.75rem;
    overflow-x: auto;
    margin: 1.5rem 0;
    border: 1px solid #e8e6e3;
  }

  .prose code {
    font-family: 'JetBrains Mono', ui-monospace, monospace;
    font-size: 0.875em;
  }

  .prose pre code {
    color: #e6edf3;
    padding: 0;
    background: none;
  }

  .prose :not(pre) > code {
    background-color: #f0efed;
    color: #2b5ce6;
    padding: 0.2em 0.4em;
    border-radius: 0.375rem;
  }

  .prose blockquote {
    border-left: 3px solid #e8e6e3;
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: #9e9e9b;
    font-style: italic;
  }

  .prose img {
    border-radius: 0.75rem;
    margin: 1.5rem 0;
    border: 1px solid #e8e6e3;
  }

  .prose hr {
    border-color: #e8e6e3;
    margin: 2rem 0;
  }

  .prose table {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
    font-size: 0.875rem;
  }

  .prose th, .prose td {
    padding: 0.75rem;
    border: 1px solid #e8e6e3;
    text-align: left;
  }

  .prose th {
    background-color: #f8f8f7;
    font-weight: 600;
    color: #1a1a19;
  }

  .prose strong {
    color: #1a1a19;
    font-weight: 600;
  }
</style>

<script>
  document.addEventListener('astro:page-load', () => {
    const twitterShare = document.querySelector('.share-twitter');
    const linkedinShare = document.querySelector('.share-linkedin');

    twitterShare?.addEventListener('click', () => {
      const url = encodeURIComponent(window.location.href);
      const text = encodeURIComponent(document.title);
      window.open(`https://twitter.com/intent/tweet?url=${url}&text=${text}`, '_blank');
    });

    linkedinShare?.addEventListener('click', () => {
      const url = encodeURIComponent(window.location.href);
      window.open(`https://www.linkedin.com/sharing/share-offsite/?url=${url}`, '_blank');
    });

    const progressBar = document.getElementById('reading-progress');
    const updateProgress = () => {
      const scrollHeight = document.documentElement.scrollHeight - window.innerHeight;
      const progress = (window.scrollY / scrollHeight) * 100;
      if (progressBar) {
        progressBar.style.width = `${Math.min(100, Math.max(0, progress))}%`;
      }
    };
    window.addEventListener('scroll', updateProgress, { passive: true });
    updateProgress();
  });
</script>
