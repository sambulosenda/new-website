---
import Layout from './Layout.astro';

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <article class="max-w-4xl mx-auto px-4">
    <div class="prose prose-lg mx-auto pt-32">
      <h1 class="mb-4">{frontmatter.title}</h1>
      <div class="flex items-center gap-4 text-gray-600 dark:text-gray-400 mb-12">
        <time datetime={frontmatter.date}>
          {new Date(frontmatter.date).toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>
        {frontmatter.tags && (
          <div class="flex gap-2">
            {frontmatter.tags.map((tag: string) => (
              <span class="bg-gray-100 dark:bg-gray-800 px-2 py-1 rounded text-sm">{tag}</span>
            ))}
          </div>
        )}
      </div>
      <slot />
    </div>
  </article>
</Layout>

<style is:global>
  .prose {
    max-width: 65ch;
    margin: 0 auto;
  }
  .prose h1 {
    font-size: 2.5rem;
    line-height: 1.2;
    font-weight: 700;
    margin-bottom: 1rem;
  }
  .prose pre {
    background-color: #1a1a1a;
    padding: 1.5rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin: 2rem 0;
  }
  .prose code {
    color: #e2e8f0;
  }
  .prose p {
    margin: 1.5rem 0;
  }
</style>